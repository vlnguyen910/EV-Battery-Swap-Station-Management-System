model User {
  user_id                Int                     @id @default(autoincrement())
  username               String
  password               String
  phone                  String                  @unique
  email                  String                  @unique
  role                   Role
  created_at             DateTime                @default(now())
  refresh_token          String?
  station_id             Int?
  batteryTransferTickets BatteryTransferTicket[]
  payments               Payment[]
  reservations           Reservation[]
  subscriptions          Subscription[]
  supports               Support[]
  swapTransactions       SwapTransaction[]
  station                Station?                @relation(fields: [station_id], references: [station_id])
  vehicles               Vehicle[]

  @@map("users")
}

enum Role {
  driver
  station_staff
  admin
}
