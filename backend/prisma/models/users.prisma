enum Role {
    driver
    station_staff
    admin
}

model User {
    user_id       Int      @id @default(autoincrement())
    username      String
    password      String
    phone         String   @unique
    email         String   @unique
    role          Role
    station_id    Int?     // Quản lý staff/manager ở station nào
    refresh_token String?
    created_at    DateTime @default(now())

    // Relationships
    station         Station?          @relation(fields: [station_id], references: [station_id])
    vehicles        Vehicle[]
    Reservation     Reservation[]
    subscriptions   Subscription[]
    payments        Payment[]
    SwapTransaction SwapTransaction[]
    supports        Support[]

    @@map("users")
}
