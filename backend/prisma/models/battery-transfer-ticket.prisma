enum ticket_type {
    import
    export
}

model BatteryTransferTicket {
    ticket_id           Int         @id @default(autoincrement())
    transfer_request_id Int
    ticket_type         ticket_type
    station_id          Int
    staff_id            Int
    created_at          DateTime    @default(now())

    // Relations
    transferRequest BatteryTransferRequest @relation(fields: [transfer_request_id], references: [transfer_request_id])
    station         Station                @relation(fields: [station_id], references: [station_id])
    staff           User                   @relation(fields: [staff_id], references: [user_id])
    batteries       Batteries[]
    
    @@map("battery_transfer_tickets")
}
